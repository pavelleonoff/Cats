<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/cat_ratingbar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="FiltersActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/filtersMargin</item>
        <item name="android:padding">@dimen/tagPadding</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/toggle_color</item>
    </style>
    <style name="FiltersTagsSelected" parent="@style/FiltersActivity">
        <item name="android:background">@drawable/toggle_tag_button</item>
    </style>
    <style name="FiltersSortBySelected" parent="@style/FiltersActivity">
        <item name="android:background">@drawable/toggle_sortby_button</item>
    </style>
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>